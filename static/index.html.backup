<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Duma - Dashboard</title>
  <style>
    :root {
      /* Light mode (default) */
      --bg: #f6f8fb;
      --panel: #ffffff;
      --border: #e5e7eb;
      --text: #0f172a;
      --muted: #64748b;
      --brand: #1f8a70;
      --brand-2: #166a55;
      --danger: #ef4444;
      --warn: #f59e0b;
      --thead: #f1f5f9;
      --brand-gradient-start: #ffffff;
      --brand-gradient-end: #fbfdff;
      --input-bg: #ffffff;
      --table-hover: #f8fafc;
      --kpi-bg: #ffffff;
      --pill-bg: #ffffff;
      --btn-bg: #ffffff;
      --menu-hover: #cbd5e1;
    }

    [data-theme="dark"] {
      /* Dark mode */
      --bg: #0f172a;
      --panel: #1e293b;
      --border: #334155;
      --text: #f1f5f9;
      --muted: #94a3b8;
      --brand: #2dd4bf;
      --brand-2: #14b8a6;
      --danger: #f87171;
      --warn: #fbbf24;
      --thead: #334155;
      --brand-gradient-start: #1e293b;
      --brand-gradient-end: #1e293b;
      --input-bg: #0f172a;
      --table-hover: #334155;
      --kpi-bg: #0f172a;
      --pill-bg: #0f172a;
      --btn-bg: #0f172a;
      --menu-hover: #475569;
    }

    * {
      box-sizing: border-box
    }

    body {
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    body {
      margin: 0;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, "Noto Sans", "Helvetica Neue", sans-serif;
      background: var(--bg);
      color: var(--text);
    }

    .app {
      display: flex;
      height: 100vh;
      overflow: hidden;
    }

    .sidebar {
      width: 270px;
      background: var(--panel);
      border-right: 1px solid var(--border);
      display: flex;
      flex-direction: column;
      padding: 14px;
      gap: 12px;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 10px;
      padding: 10px 10px;
      border: 1px solid var(--border);
      border-radius: 12px;
      background: linear-gradient(180deg, var(--brand-gradient-start) 0%, var(--brand-gradient-end) 100%);
    }

    .brand .dot {
      width: 34px;
      height: 34px;
      border-radius: 10px;
      background: var(--brand);
      display: grid;
      place-items: center;
      color: white;
      font-weight: 900;
    }

    .brand .brandLogo {
      width: 34px;
      height: 34px;
      border-radius: 10px;
      object-fit: contain;
      background: var(--panel);
      border: 1px solid var(--border);
    }

    .brand .title {
      font-weight: 900
    }

    .brand .sub {
      font-size: 12px;
      color: var(--muted);
      margin-top: 2px
    }

    .menu {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .menu button {
      width: 100%;
      padding: 10px 12px;
      border: 1px solid var(--border);
      border-radius: 12px;
      background: var(--panel);
      cursor: pointer;
      text-align: left;
      font-weight: 800;
      color: var(--text);
      transition: all 0.2s ease;
    }

    .menu button:hover {
      border-color: var(--menu-hover)
    }

    .menu button.active {
      border-color: rgba(31, 138, 112, .45);
      box-shadow: 0 0 0 3px rgba(31, 138, 112, .12);
      background: rgba(31, 138, 112, .06);
    }

    .menu .hint {
      font-size: 12px;
      color: var(--muted);
      padding: 0 6px;
      line-height: 1.4;
    }

    .main {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .topbar {
      background: var(--panel);
      border-bottom: 1px solid var(--border);
      padding: 12px 16px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
    }

    .topbar .left {
      display: flex;
      flex-direction: column;
      gap: 2px;
      min-width: 220px;
    }

    .topbar .title {
      font-weight: 950;
      letter-spacing: .2px;
    }

    .topbar .subtitle {
      font-size: 12px;
      color: var(--muted);
    }

    .topbar .right {
      display: flex;
      gap: 10px;
      align-items: center;
      flex-wrap: wrap;
      justify-content: flex-end;
    }

    .pill {
      font-size: 12px;
      padding: 6px 10px;
      border-radius: 999px;
      border: 1px solid var(--border);
      color: var(--muted);
      background: var(--pill-bg);
    }

    .pill.ok {
      border-color: rgba(31, 138, 112, .35);
      color: var(--brand-2);
      background: rgba(31, 138, 112, .06);
    }

    .pill.busy {
      border-color: rgba(245, 158, 11, .35);
      color: #92400e;
      background: rgba(245, 158, 11, .10);
    }

    .pill.err {
      border-color: rgba(239, 68, 68, .35);
      color: #991b1b;
      background: rgba(239, 68, 68, .08);
    }

    .view {
      flex: 1;
      overflow: auto;
      padding: 18px;
    }

    .shell {
      max-width: 1200px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      gap: 14px;
    }

    .card {
      background: var(--panel);
      border: 1px solid var(--border);
      border-radius: 16px;
      padding: 14px;
    }

    .card h2 {
      margin: 0 0 6px 0;
      font-size: 16px
    }

    .card .sub {
      margin: 0;
      color: var(--muted);
      font-size: 13px
    }

    .form-row {
      display: flex;
      gap: 10px;
      align-items: center;
      flex-wrap: wrap;
      margin-top: 10px;
    }

    input[type="date"],
    select {
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 10px 10px;
      font-family: inherit;
      font-size: 14px;
      background: var(--input-bg);
      color: var(--text);
      transition: all 0.2s ease;
    }

    .btn {
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 10px 12px;
      cursor: pointer;
      background: var(--btn-bg);
      font-weight: 900;
      color: var(--text);
      transition: all 0.2s ease;
    }

    .btn.primary {
      background: var(--brand);
      border-color: var(--brand);
      color: #fff;
    }

    .btn.primary:hover {
      background: var(--brand-2);
      border-color: var(--brand-2)
    }

    .cardHead {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 10px
    }

    .actions {
      display: flex;
      gap: 8px;
      flex-wrap: wrap
    }

    .actions .btn {
      padding: 8px 10px;
      font-size: 13px
    }

    .small {
      font-size: 12px
    }

    .muted {
      color: var(--muted)
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: 14px;
    }

    @media (max-width: 1100px) {
      .grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }

    @media (max-width: 720px) {
      .sidebar {
        display: none
      }

      .grid {
        grid-template-columns: 1fr;
      }
    }

    .plot-card {
      background: var(--panel);
      border: 1px solid var(--border);
      border-radius: 16px;
      overflow: hidden;
    }

    .plot-title {
      padding: 10px 12px;
      border-bottom: 1px solid var(--border);
      font-weight: 950;
      font-size: 13px;
      line-height: 1.15;
    }

    .plot-frame {
      width: 100%;
      height: 340px;
      border: 0;
      display: block;
      background: #0b0f14;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 13px;
    }

    thead th {
      background: var(--thead);
      border-bottom: 1px solid var(--border);
    }

    th,
    td {
      border-bottom: 1px solid var(--border);
      padding: 9px 10px;
      text-align: left;
      vertical-align: top;
      white-space: nowrap;
    }

    tbody tr:hover {
      background: var(--table-hover);
    }

    th {
      color: var(--muted);
      font-weight: 950;
      font-size: 12px
    }

    .tableWrap {
      overflow: auto;
      border: 1px solid var(--border);
      border-radius: 12px;
    }

    .kpi-grid {
      display: grid;
      grid-template-columns: repeat(4, minmax(0, 1fr));
      gap: 12px;
      margin-top: 10px;
    }

    @media (max-width: 900px) {
      .kpi-grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }

    .kpi {
      border: 1px solid var(--border);
      border-radius: 14px;
      padding: 12px;
      background: var(--kpi-bg);
    }

    .kpi .label {
      font-size: 12px;
      color: var(--muted);
      font-weight: 900
    }

    .kpi .value {
      font-size: 22px;
      font-weight: 1000;
      margin-top: 4px
    }

    .kpi .hint {
      font-size: 12px;
      color: var(--muted);
      margin-top: 2px
    }

    .mono {
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      font-size: 12px;
      background: #0b1220;
      color: #e2e8f0;
      padding: 10px;
      border-radius: 12px;
      overflow: auto;
      border: 1px solid rgba(148, 163, 184, .2);
    }

    /* markdown output simple */
    .md h1,
    .md h2,
    .md h3 {
      margin: 10px 0 6px 0
    }

    .md p {
      margin: 6px 0
    }

    .md ul,
    .md ol {
      margin: 6px 0 6px 18px
    }

    .md li {
      margin: 3px 0
    }

    /* Theme toggle button */
    .theme-toggle {
      width: 40px;
      height: 40px;
      border-radius: 10px;
      border: 1px solid var(--border);
      background: var(--btn-bg);
      cursor: pointer;
      display: grid;
      place-items: center;
      font-size: 20px;
      transition: all 0.3s ease;
    }

    .theme-toggle:hover {
      transform: scale(1.05);
      border-color: var(--brand);
    }
  </style>
</head>

<body>
