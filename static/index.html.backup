  <script>
    const el = (id) => document.getElementById(id);

    // ===========================
    // Theme Toggle (Dark/Light Mode)
    // ===========================
    function initTheme() {
      const savedTheme = localStorage.getItem('duma-theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const theme = savedTheme || (prefersDark ? 'dark' : 'light');

      document.documentElement.setAttribute('data-theme', theme);
      updateThemeIcon(theme);
    }

    function toggleTheme() {
      const currentTheme = document.documentElement.getAttribute('data-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

      document.documentElement.setAttribute('data-theme', newTheme);
      localStorage.setItem('duma-theme', newTheme);
      updateThemeIcon(newTheme);
    }

    function updateThemeIcon(theme) {
      const toggleBtn = el('themeToggle');
      if (toggleBtn) {
        toggleBtn.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
        toggleBtn.title = theme === 'dark' ? 'Modo claro' : 'Modo oscuro';
      }
    }

    // Initialize theme on page load
    initTheme();

    // Add event listener to toggle button
    el('themeToggle')?.addEventListener('click', toggleTheme);


    function setStatus(kind, text) {
      const pill = el("statusPill");
      pill.classList.remove("ok", "busy", "err");
      pill.classList.add(kind);
      pill.textContent = text;
    }

    function escapeHtml(s) {
      return String(s ?? "")
        .replaceAll("&", "&amp;")
        .replaceAll("<", "&lt;")
        .replaceAll(">", "&gt;")
        .replaceAll('"', "&quot;")
        .replaceAll("'", "&#039;");
    }

    function formatNum(v) {
      if (v === null || v === undefined || v === "") return "";
      const n = Number(v);
      if (Number.isNaN(n)) return String(v);
      return (Math.round(n * 100) / 100).toString();
    }

    function toPct(v) {
      if (v === null || v === undefined || v === "") return "";
      const n = Number(v);
      if (Number.isNaN(n)) return String(v);
      return (Math.round(n * 100) / 100).toString() + "%";
    }

    // Estado para descargas
    let lastCvDay = null;
    let lastOeeDay = null;
    let lastOeeShift = null;

    // Mapeo de etiquetas (realtime) - incluye producci√≥n/velocidad
    const LABEL_OEE_RT = {
      LineName: "L√≠nea",
      SnapshotAtLocal: "Snapshot (hora local)",
      OEE: "OEE (%)",
      Availability: "Disponibilidad (%)",
      Performance: "Desempe√±o (%)",
      Quality: "Calidad (%)",
      StatusCode: "Estatus",
      StatusTimeMin: "Tiempo en estatus (min)",
      NaturalTimeMin: "Tiempo natural (min)",
      ProductiveTimeMin: "Tiempo productivo (min)",
      ScheduledStopageMin: "Paro programado (min)",
      UnscheduledStopageMin: "Paro no programado (min)",
      CurrentRate: "Velocidad real (kg/h)",
      ExpectedRate: "Velocidad esperada (kg/h)",
      CurrentShiftProduction: "Producci√≥n real turno (kg)",
      ExpectedShiftProduction: "Producci√≥n esperada turno (kg)",
      CurrentProduction: "Producci√≥n real d√≠a (kg)",
      ExpectedDayProduction: "Producci√≥n esperada d√≠a (kg)"
    };

    // Mapeo de etiquetas (d√≠a/turno) - nombres reales del SQL
    const LABEL_OEE_DAY = {
      Turno: "Turno",
      Fecha: "Fecha",
      OEE: "OEE (%)",
      Disponibilidad: "Disponibilidad (%)",
      Desempeno: "Desempe√±o (%)",
      Calidad: "Calidad (%)",
      DuracionTurnoMin: "Duraci√≥n turno (min)",
      TiempoDisponibleMin: "Tiempo disponible (min)",
      TiempoProductivoMin: "Tiempo productivo (min)",
      TiempoNoProdProgramadoMin: "Paro programado (min)",
      TiempoNoProdNoProgramadoMin: "Paro no programado (min)",
      ProduccionEstimadaKg: "Producci√≥n esperada (kg)",
      ProduccionRealKg: "Producci√≥n real (kg)",
      VelocidadPromedioEstimadaKgHr: "Velocidad prom. esperada (kg/h)",
      VelocidadPromedioRealKgHr: "Velocidad prom. real (kg/h)"
    };

    async function downloadFrom(url, filename) {
      try {
        const res = await fetch(url);
        if (!res.ok) throw new Error(`HTTP ${res.status}`);
        const blob = await res.blob();
        const a = document.createElement('a');
        const objectUrl = URL.createObjectURL(blob);
        a.href = objectUrl;
        a.download = filename;
        document.body.appendChild(a);
        a.click();
        a.remove();
        // Limpieza sin romper la descarga
        setTimeout(() => { try { URL.revokeObjectURL(objectUrl); } catch (e) { } }, 1000);
      } catch (err) {
        console.error(err);
        alert('No se pudo descargar el archivo. Revisa que el backend est√© corriendo y vuelve a intentar.');
      }
    }
    function todayISO() {
      const t = new Date();
      const yyyy = t.getFullYear();
      const mm = String(t.getMonth() + 1).padStart(2, "0");
      const dd = String(t.getDate()).padStart(2, "0");
      return `${yyyy}-${mm}-${dd}`;
    }

    function buildTable(headRowEl, bodyEl, columns, rows, labelMap = null) {
      headRowEl.innerHTML = "";
      bodyEl.innerHTML = "";

      (columns || []).forEach(c => {
        const th = document.createElement("th");
        th.textContent = (labelMap && labelMap[c]) ? labelMap[c] : c;
        headRowEl.appendChild(th);
      });

      (rows || []).forEach(r => {
        const tr = document.createElement("tr");
        (columns || []).forEach((c, idx) => {
          const td = document.createElement("td");
          td.textContent = (r && r[idx] !== undefined && r[idx] !== null) ? String(r[idx]) : "";
          tr.appendChild(td);
        });
        bodyEl.appendChild(tr);
      });
    }

    // Markdown muy simple -> HTML
    // FIX: ahora tambi√©n convierte **bold** dentro de bullets
    function mdToHtml(md) {
      if (!md) return "";
      const esc = (s) => String(s)
        .replace(/&/g, "&amp;")
        .replace(/</g, "&lt;")
        .replace(/>/g, "&gt;");

      const applyInline = (s) => esc(s).replace(/\*\*(.+?)\*\*/g, "<strong>$1</strong>");

      const lines = String(md).split(/\r?\n/);
      let html = "";
      let inUl = false;
      let inOl = false;

      function closeLists() {
        if (inUl) { html += "</ul>"; inUl = false; }
        if (inOl) { html += "</ol>"; inOl = false; }
      }

      for (let rawLine of lines) {
        const line = rawLine.trimEnd();

        if (!line) {
          closeLists();
          html += "<br>";
          continue;
        }

        if (line === "---") {
          closeLists();
          html += "<hr>";
          continue;
        }

        let m;
        if ((m = line.match(/^#####\s+(.*)$/))) { closeLists(); html += `<h5>${applyInline(m[1])}</h5>`; continue; }
        if ((m = line.match(/^####\s+(.*)$/))) { closeLists(); html += `<h4>${applyInline(m[1])}</h4>`; continue; }
        if ((m = line.match(/^###\s+(.*)$/))) { closeLists(); html += `<h3>${applyInline(m[1])}</h3>`; continue; }
        if ((m = line.match(/^##\s+(.*)$/))) { closeLists(); html += `<h2>${applyInline(m[1])}</h2>`; continue; }
        if ((m = line.match(/^#\s+(.*)$/))) { closeLists(); html += `<h1>${applyInline(m[1])}</h1>`; continue; }

        if ((m = line.match(/^(?:-|\*)\s+(.*)$/))) {
          if (inOl) { html += "</ol>"; inOl = false; }
          if (!inUl) { html += "<ul>"; inUl = true; }
          html += `<li>${applyInline(m[1])}</li>`;
          continue;
        }

        if ((m = line.match(/^\d+\)\s+(.*)$/)) || (m = line.match(/^\d+\.\s+(.*)$/))) {
          if (inUl) { html += "</ul>"; inUl = false; }
          if (!inOl) { html += "<ol>"; inOl = true; }
          html += `<li>${applyInline(m[1])}</li>`;
          continue;
        }

        closeLists();
        html += `<p>${applyInline(line)}</p>`;
      }

      closeLists();
      return html;
    }

    // -----------------------------
    // Menu switching
    // -----------------------------
    function showView(name) {
      const views = ["CV", "OeeRT", "OeeDay"];
      for (const v of views) {
        el("view" + v).style.display = (v === name) ? "" : "none";
      }

      el("btnMenuCV").classList.toggle("active", name === "CV");
      el("btnMenuOeeRT").classList.toggle("active", name === "OeeRT");
      el("btnMenuOeeDay").classList.toggle("active", name === "OeeDay");

      if (name === "CV") {
        el("topTitle").textContent = "Variables de control";
        el("topSubtitle").textContent = "D√≠a completo (3 turnos) ‚Äî variables cr√≠ticas";
      } else if (name === "OeeRT") {
        el("topTitle").textContent = "OEE en tiempo real";
        el("topSubtitle").textContent = "√öltimo snapshot ‚Äî l√≠nea de producci√≥n";
      } else {
        el("topTitle").textContent = "OEE por d√≠a/turno";
        el("topSubtitle").textContent = "Resumen por turno para una fecha";
      }
    }

    el("btnMenuCV").addEventListener("click", () => showView("CV"));
    el("btnMenuOeeRT").addEventListener("click", () => showView("OeeRT"));
    el("btnMenuOeeDay").addEventListener("click", () => showView("OeeDay"));

    // -----------------------------
    // Clear current view outputs
    // -----------------------------
    el("btnClear").addEventListener("click", () => {
      // CV
      el("cvInfo").textContent = "";
      el("cvSummaryCard").style.display = "none";
      el("cvGrid").innerHTML = "";
      el("cvAICard").style.display = "none";
      el("cvAI").innerHTML = "";

      // OEE RT
      el("oeeRtInfo").textContent = "";
      el("oeeRtKpis").style.display = "none";
      el("oeeRtTableCard").style.display = "none";
      el("oeeRtAICard").style.display = "none";
      el("oeeRtAI").innerHTML = "";

      // OEE Day
      el("oeeDayInfo").textContent = "";
      el("oeeDayTableCard").style.display = "none";
      el("oeeDayAICard").style.display = "none";
      el("oeeDayAI").innerHTML = "";

      setStatus("ok", "Listo");
    });

    // -----------------------------
    // CONTROL VARIABLES
    // -----------------------------
    function renderCVSummary(rows) {
      const tbody = el("cvTable").querySelector("tbody");
      tbody.innerHTML = "";
      for (const r of rows) {
        const tr = document.createElement("tr");
        tr.innerHTML = `
        <td>${escapeHtml(r.name || r.var_id || "")}</td>
        <td>${escapeHtml(r.device || "")}</td>
        <td>${formatNum(r.points)}</td>
        <td>${formatNum(r.out_points)}</td>
        <td>${formatNum(r.out_pct)}%</td>
        <td>${formatNum(r.min_value)}</td>
        <td>${formatNum(r.max_value)}</td>
      `;
        tbody.appendChild(tr);
      }
    }

    function renderCVPlots(plots) {
      const grid = el("cvGrid");
      grid.innerHTML = "";
      for (const p of plots) {
        const card = document.createElement("div");
        card.className = "plot-card";
        card.innerHTML = `
        <div class="plot-title">${escapeHtml(p.title || p.var_id || "")}</div>
        <iframe class="plot-frame" src="${p.url}"></iframe>
      `;
        grid.appendChild(card);
      }
    }

    async function generateControlVars() {
      const day = (el("cvDay").value || "").trim();
      if (!day) {
        el("cvInfo").textContent = "Selecciona una fecha.";
        return;
      }

      el("cvInfo").textContent = "";
      el("cvSummaryCard").style.display = "none";
      el("cvGrid").innerHTML = "";
      el("cvAICard").style.display = "none";
      el("cvAI").innerHTML = "";

      setStatus("busy", "Generando...");

      try {
        const res = await fetch("/api/control-variables/day", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ day })
        });
        const data = await res.json();

        if (!res.ok) {
          throw new Error(data.detail || data.error || "Error en /api/control-variables/day");
        }

        lastCvDay = day;

        if (data.ai_analysis) {
          el("cvAI").innerHTML = mdToHtml(String(data.ai_analysis));
          el("cvAICard").style.display = "";
        }

        if (Array.isArray(data.summary)) {
          renderCVSummary(data.summary);
          el("cvSummaryCard").style.display = "";
        }

        if (Array.isArray(data.plots)) {
          renderCVPlots(data.plots);
        }

        setStatus("ok", "Listo");
      } catch (err) {
        el("cvInfo").textContent = "‚ö†Ô∏è " + (err.message || err);
        setStatus("err", "Error");
      }
    }

    el("btnGenCV").addEventListener("click", generateControlVars);

    // -----------------------------
    // OEE REALTIME
    // -----------------------------
    async function fetchOeeRealtime() {
      el("oeeRtInfo").textContent = "";
      el("oeeRtKpis").style.display = "none";
      el("oeeRtTableCard").style.display = "none";
      el("oeeRtAICard").style.display = "none";
      el("oeeRtAI").innerHTML = "";

      setStatus("busy", "Consultando...");
      try {
        const res = await fetch("/api/oee/realtime");
        const data = await res.json();
        if (!res.ok) {
          throw new Error(data.detail || data.error || "Error en /api/oee/realtime");
        }

        const rows = data.rows || [];
        const cols = data.columns || [];

        if (rows.length === 0) {
          el("oeeRtInfo").textContent = "No hay datos de snapshot.";
          setStatus("ok", "Listo");
          return;
        }

        const first = rows[0] || [];
        const idx = (name) => cols.findIndex(c => String(c).toLowerCase() === String(name).toLowerCase());

        const iOee = idx("OEE");
        const iAv = idx("Availability");
        const iPe = idx("Performance");
        const iQu = idx("Quality");
        const iLine = idx("LineName");
        const iSnap = idx("SnapshotAtLocal");

        el("kpiOee").textContent = (iOee >= 0) ? toPct(first[iOee]) : "‚Äî";
        el("kpiAvail").textContent = (iAv >= 0) ? toPct(first[iAv]) : "‚Äî";
        el("kpiPerf").textContent = (iPe >= 0) ? toPct(first[iPe]) : "‚Äî";
        el("kpiQual").textContent = (iQu >= 0) ? toPct(first[iQu]) : "‚Äî";

        const line = (iLine >= 0) ? String(first[iLine] ?? "") : "";
        const snap = (iSnap >= 0) ? String(first[iSnap] ?? "") : "";
        el("kpiOeeHint").textContent = (line || snap) ? `${line} ${snap ? "‚Äî " + snap : ""}` : "";

        el("oeeRtKpis").style.display = "";

        buildTable(el("oeeRtHead"), el("oeeRtBody"), cols, rows, LABEL_OEE_RT);
        el("oeeRtTableCard").style.display = "";

        if (data.ai_analysis) {
          el("oeeRtAI").innerHTML = mdToHtml(String(data.ai_analysis));
          el("oeeRtAICard").style.display = "";
        }

        setStatus("ok", "Listo");
      } catch (err) {
        el("oeeRtInfo").textContent = "‚ö†Ô∏è " + (err.message || err);
        setStatus("err", "Error");
      }
    }

    el("btnFetchOeeRT").addEventListener("click", fetchOeeRealtime);

    // -----------------------------
    // OEE DAY / TURN
    // -----------------------------
    async function fetchOeeDay() {
      const day = (el("oeeDay").value || "").trim();
      const shift = (el("oeeShift").value || "").trim();

      if (!day) {
        el("oeeDayInfo").textContent = "Selecciona una fecha.";
        return;
      }

      el("oeeDayInfo").textContent = "";
      el("oeeDayTableCard").style.display = "none";
      el("oeeDayAICard").style.display = "none";
      el("oeeDayAI").innerHTML = "";

      setStatus("busy", "Consultando...");
      try {
        const body = { day: day };
        if (shift) body.shift_name = shift;

        const res = await fetch("/api/oee/day-turn", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(body)
        });
        const data = await res.json();
        if (!res.ok) {
          throw new Error(data.detail || data.error || "Error en /api/oee/day-turn");
        }

        lastOeeDay = day;
        lastOeeShift = shift ? shift : null;

        const rows = data.rows || [];
        const cols = data.columns || [];
        if (rows.length === 0) {
          el("oeeDayInfo").textContent = "No hay datos para esa fecha/turno.";
          setStatus("ok", "Listo");
          return;
        }

        buildTable(el("oeeDayHead"), el("oeeDayBody"), cols, rows, LABEL_OEE_DAY);
        el("oeeDayTableCard").style.display = "";

        if (data.ai_analysis && String(data.ai_analysis).trim()) {
          el("oeeDayAI").innerHTML = mdToHtml(String(data.ai_analysis));
          el("oeeDayAICard").style.display = "";
        }

        setStatus("ok", "Listo");
      } catch (err) {
        el("oeeDayInfo").textContent = "‚ö†Ô∏è " + (err.message || err);
        setStatus("err", "Error");
      }
    }

    el("btnFetchOeeDay").addEventListener("click", fetchOeeDay);

    // -----------------------------
    // Descargas (IDs correctos + querystring correcto)
    // -----------------------------
    el("btnDlCvPdf").addEventListener("click", async () => {
      if (!lastCvDay) return alert("Primero genera Variables de control para una fecha.");
      await downloadFrom(`/api/report/control-variables/day?day=${encodeURIComponent(lastCvDay)}&format=pdf`, `variables_control_${lastCvDay}.pdf`);
    });
    el("btnDlCvDocx").addEventListener("click", async () => {
      if (!lastCvDay) return alert("Primero genera Variables de control para una fecha.");
      await downloadFrom(`/api/report/control-variables/day?day=${encodeURIComponent(lastCvDay)}&format=docx`, `variables_control_${lastCvDay}.docx`);
    });

    el("btnDlOeeRtPdf").addEventListener("click", async () => {
      await downloadFrom(`/api/report/oee/realtime?format=pdf`, `oee_tiempo_real.pdf`);
    });
    el("btnDlOeeRtDocx").addEventListener("click", async () => {
      await downloadFrom(`/api/report/oee/realtime?format=docx`, `oee_tiempo_real.docx`);
    });

    el("btnDlOeeDayPdf").addEventListener("click", async () => {
      if (!lastOeeDay) return alert("Primero consulta OEE por d√≠a/turno.");
      const qs = new URLSearchParams({ day: lastOeeDay, format: "pdf" });
      if (lastOeeShift) qs.set("shift", lastOeeShift);
      await downloadFrom(`/api/report/oee/day?${qs.toString()}`, `oee_${lastOeeDay}${lastOeeShift ? "_" + lastOeeShift : ""}.pdf`);
    });
    el("btnDlOeeDayDocx").addEventListener("click", async () => {
      if (!lastOeeDay) return alert("Primero consulta OEE por d√≠a/turno.");
      const qs = new URLSearchParams({ day: lastOeeDay, format: "docx" });
      if (lastOeeShift) qs.set("shift", lastOeeShift);
      await downloadFrom(`/api/report/oee/day?${qs.toString()}`, `oee_${lastOeeDay}${lastOeeShift ? "_" + lastOeeShift : ""}.docx`);
    });

    // -----------------------------
    // Init
    // -----------------------------
    (function init() {
      el("cvDay").value = todayISO();
      el("oeeDay").value = todayISO();
      setStatus("ok", "Listo");
      showView("CV");
    })();
  </script>
